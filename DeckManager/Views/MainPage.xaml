<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeckManager.Views.MainPage"
            >
    <StackLayout VerticalOptions="Center"
        HorizontalOptions="Center"
        Spacing="20">
        <Button
            x:Name="BtnDecks"
            Text="Decks"
            FontSize="24"
            BackgroundColor="#2196F3"
            TextColor="White"
            WidthRequest="200"
            HeightRequest="60"
            Clicked="BtnDecks_Clicked" />

        <Button
            x:Name="BtnCards"
            Text="Card Find"
            FontSize="24"
            BackgroundColor="#f44336"
            TextColor="White"
            WidthRequest="200"
            HeightRequest="60"
            Clicked="BtnCards_Clicked" />
    </StackLayout>
</ContentPage>